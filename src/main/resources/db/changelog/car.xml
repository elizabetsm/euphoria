<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                  	http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet id="car" author="selishchevaa">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="car"/>
            </not>
        </preConditions>
        <createTable tableName="car">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="marka" type="varchar(255)"/>
            <column name="number" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="driver_id" type="int">
                <constraints foreignKeyName="driver_id" references="driver(id)" nullable="true"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="car"/>
        </rollback>
    </changeSet>
</databaseChangeLog>